{
  "extends": "@repo/eslint-config/tsconfig.next.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "ESNext",
    "allowJs": true,
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
